page {
  height: 100%;
}
.ticket-details {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #fafafa;
}
.ticket-details-header {
  width: 100%;
  height: 200rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 5;
  margin: auto;
  overflow: hidden;
  background: #6badf8;
  color: #ffffff;
  display: flex;
}
.header-info {
  flex: 1;
  text-align: center;
}
.header-info-date {
  font-size: 25rpx;
  margin-top: 26rpx;
}
.header-info-time {
  font-size: 45rpx;
}
.header-info-place {
  font-size: 28rpx;
}
.text-left {
  text-align: left;
  margin-left: 25rpx;
}
.text-right {
  text-align: right;
  margin-right: 25rpx;
}
.header-info-line {
  display: flex;
  margin-top: 75rpx;
  overflow: hidden;
}
.info-line {
  flex: 1;
  height: 1rpx;
  margin-top: 17rpx;
  background-color: #ffffff;
}
.line-mes {
  width: 140rpx;
  height: 35rpx;
  line-height: 35rpx;
  font-size: 28rpx;
  border: 1rpx solid #FFFFFF;
  border-radius: 50px;
}
.header-info-lineName {
  margin-top: 15rpx;
  font-size: 28rpx;
}
.ticket-details-info {
  width: 100%;
  max-height: 800rpx;
  position: absolute;
  top: 200rpx;
  left: 0;
  bottom: 180rpx;
  overflow: auto;
}
.ticket-details-seat {
  width: 100%;
  height: 180rpx;
  background-color: #FFFFFF;
  display: flex;
}
.details-seat-list {
  flex: 1;
  border-right: 4rpx solid #fafafa;
  text-align: center;
}
.no-border-flex {
  border-right: none;
}
.seat-list-name {
  font-size: 28rpx;
  font-weight: 600;
  margin-top: 25rpx;
}
.seat-list-price {
  font-size: 26rpx;
  color: #888888;
  margin-top: 5rpx;
}
.seat-list-num {
  font-size: 26rpx;
  color: #888888;
  margin-top: 5rpx;
}
.ticket-details-add {
  width: 100%;
  margin-top: 20rpx;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #FFFFFF;
  color: #6badf8;
  text-align: center;
  font-size: 28rpx;
}
.ticket-details-person {
  width: 100%;
  margin-top: 16rpx;
}
.ticket-details-person-list {
  width: 100%;
  height: 100rpx;
  background-color: #ffffff;
  margin-top: 4rpx;
  display: flex;
}
.person-operation {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.person-info {
  flex: 1;
  overflow: hidden;
}
.person-name {
  font-size: 28rpx;
  font-weight: 600;
  margin-top: 10rpx;
  float: left;
}
.person-type {
  padding: 0 10rpx;
  height: 30rpx;
  line-height: 32rpx;
  border-radius: 10rpx;
  background: #F0F0F0;
  font-size: 23rpx;
  margin-left: 20rpx;
  margin-top: 17rpx;
  float: left;
}
.person-id {
  font-size: 26rpx;
  color: #888888;
  clear: both;
}
.ticket-details-alert {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 26rpx;
  text-indent: 20rpx;
  background-color: #FDFBEF;
  color: #D5B79D;
  margin-top: 20rpx;
}
.ticket-details-phone {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 26rpx;
  text-indent: 20rpx;
  background-color: #FFFFFF;
  margin-top: 20rpx;
  display: flex;
}
.ticket-details-phone-label {
  font-size: 28rpx;
  color: #888888;
}
.ticket-details-phone-input {
  flex: 1;
}
.phone-input {
  height: 100rpx;
  line-height: 100rpx;
  color: #aaaaaa;
}
.ticket-details-buy {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  text-indent: 20rpx;
  background-color: #FFFFFF;
  margin-top: 20rpx;
  color: #888888;
}
.ticket-details-reserve {
  width: 100%;
  height: 180rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #FFFFFF;
}
.reserve-btn {
  width: 95%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #6badf8;
  color: #FFFFFF;
  text-align: center;
  font-size: 30rpx;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 22rpx;
  margin: auto;
}



