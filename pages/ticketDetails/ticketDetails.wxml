<!--pages/ticketDetails/ticketDetails.wxml-->
  <view class='ticket-details-wrap'>
    <view class='ticket-details-alert'>{{getData.alert}}</view>
    <view class='unit' wx:for="{{getData.ticketList}}">
      <view class='unit-num'>取票号：{{item.num}}</view>
      <view class='unit-ticket'>
        <view class="unit-ticket-top">
          <view class='header-info'>
            <view class='header-info-date text-left'>{{item.startDate}}</view>
            <view class='header-info-time text-left'>{{item.startTime}}</view>
            <view class='header-info-place text-left'>{{item.startPlace}}</view>
          </view>
          <view class='header-info'>
            <view class='header-info-line'>
              <view class='info-line'></view>
              <view class='line-mes'>时刻表</view>
              <view class='info-line'></view>
            </view>
            <view class='header-info-lineName'>{{item.lineName}}</view>
          </view>
          <view class='header-info'>
            <view class='header-info-date text-right'>{{item.endDate}}</view>
            <view class='header-info-time text-right'>{{item.endTime}}</view>
            <view class='header-info-place text-right'>{{item.endPlace}}</view>
          </view>
        </view>
        <view class="unit-ticket-bottom">
          <view class='bottom-left'>
            <view>{{item.name}}<text class='person-type'>{{ item.type == 0 ? '成人票' : '学生票'}}</text></view>
            <view>身份证：{{item.idCard}}</view>
            <view>待支付</view>
          </view>
          <view class='bottom-right'>
            <view>软座：¥{{item.price}}</view>
            <view>{{item.seat}}</view>
          </view>
        </view>
      </view>
    </view>
    <view>
      <button class='ok'>取消订单</button>
    </view>
     <view class='ticket-bottom clearFix'>
      <text class='ticket-bottom-price'>¥ 9.0</text>
      <button class='ticket-bottom-payment'>去支付</button>
     </view>
  </view>

 
        
