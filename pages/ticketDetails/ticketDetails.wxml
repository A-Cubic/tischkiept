<!--pages/ticketDetails/ticketDetails.wxml-->
  <view class='ticket-details-wrap'>
    <view wx:if='{{paystate==0}}' class='ticket-details-alert'>{{getData.alert}}</view>
    <view class='ticket-content' >
      <view class='unit-num'>取票号：{{getData.ticketMessage.num}}</view>
      <view class='unit-ticket'>
        <view class="unit-ticket-top unit-ticket-top-style">
          <view class='header-info'>
            <view class='header-info-date text-left'>{{getData.ticketMessage.startDate}}</view>
            <view class='header-info-time text-left'>{{getData.ticketMessage.startTime}}</view>
            <view class='header-info-place text-left'>{{getData.ticketMessage.startPlace}}</view>
          </view>
          <view class='header-info'>
            <view class='header-info-line'>
              <view class='info-line'></view>
              <view class='line-mes'>时刻表</view>
              <view class='info-line'></view>
            </view>
            <view class='header-info-lineName'>{{getData.ticketMessage.lineName}}</view>
          </view>
          <view class='header-info'>
            <view class='header-info-date text-right'>{{getData.ticketMessage.endDate}}</view>
            <view class='header-info-time text-right'>{{getData.ticketMessage.endTime}}</view>
            <view class='header-info-place text-right'>{{getData.ticketMessage.endPlace}}</view>
          </view>
        </view>
        <view class=' unit-ticket-bottom-style' >
          <view class="unit borBotGray " wx:for="{{getData.ticketPassengers}}">
            <view class='bottom-left'>
              <view>{{item.name}}<text class='person-type'>{{ item.type == 0 ? '成人票' : '学生票'}}</text></view>
              <view>身份证：{{item.idCard}}</view>
              <view>{{payStateArr[paystate]}}</view>
            </view>
            <view class='bottom-right'>
              <view>软座：{{item.seat}}</view>
              <view>¥{{item.price}}</view>
              <view wx:if='{{paystate==1}}' >
                <text class='refund-ticket'>退票</text>
                <!-- <button class='refund-ticket'>退票</button> -->
              </view>
            </view>
          </view>
          
        </view>
      </view>
    </view>
    <view>
      <button class='ok' wx:if='{{paystate==0}}'>取消订单</button>
    </view>
     <view class='ticket-bottom clearFix' wx:if='{{paystate==0}}'>
      <text class='ticket-bottom-price'>¥ 9.0</text>
      <button class='ticket-bottom-payment'>去支付</button>
     </view>
  </view>

 
        
