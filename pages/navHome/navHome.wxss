/* pages/navHome/navHome.wxss */
page{
  background: #fbfbfb;
}

.swiper {
  position: relative;
}
.swiper image {
  width: 100%;
  height: auto;
}
.ticket{
  margin: 0 20rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
}

.addressWrap,.dateWrap{
  padding: 20rpx 0;
   display: flex;
}
.flex1{
  flex: 1;
}
.address-picker,.date-checkbox{
  text-align: right;
}
.btn {
   /* width: 670rpx; */
  height: 80rpx;
  line-height: 80rpx;
  background: #1c99ff;
  font-size: 30rpx;
  color: #FFFFFF;
  margin: 0 auto;
}
button[class="btn"]::after {
  border:0;
  /* background: #dedede; */
}
.button-hover{
  opacity: 0.8
}

/*  */
.btnWrap{
  padding: 5rpx 0 30rpx; 
}
.mapWrap{
  padding: 20rpx;
}
.shop{
  background: #fff;
  font-size: 28rpx;
  border-radius: 10rpx;
  /* overflow: hidden; */
}
.shop_adress,.shop_phone{
  display: flex;
  margin: 0 20rpx;
}
.shop_adress_img{
  padding: 20rpx;
  width: 50rpx;
  flex: 1;
}
.shop_adress_word{
  padding: 12rpx;
  width: 580rpx;
  flex: 12;
  line-height: 70rpx;
}
.shop_phone_img{
  padding: 20rpx;
  width: 50rpx;
  flex: 1;
}
.shop_phone_word{
  padding: 12rpx;
  width: 500rpx;
  flex: 12;
  line-height: 70rpx;
}
.shop_phone_phone{
  padding: 20rpx;
  width: 100rpx;
  flex: 1.5;
}
